<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/add_project_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:clickable="true"
    android:focusable="true">


    <EditText
        android:id="@+id/projectName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/name"
        android:text="Название" />

    <EditText
        android:id="@+id/projectObjective"
        android:layout_width="354dp"
        android:layout_height="wrap_content"

        android:layout_alignParentStart="true"
        android:layout_below="@+id/projectName"
        android:hint="@string/objective"
        android:text="Цель" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        android:layout_below="@+id/projectObjective"
        android:layout_marginTop="10dp"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:layout_above="@+id/saveAndContinue"
        android:layout_marginBottom="10dp">
        <RelativeLayout
            android:id="@+id/add_project_tree_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/scrollView"
            android:layout_alignParentEnd="true"></RelativeLayout>
    </ScrollView>

    <Button
        android:id="@+id/save"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="@string/save"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="15dp"
        style="@android:style/Widget.Holo.ActionButton.TextButton"
        android:background="#00ffffff"
        android:layout_below="@+id/scrollView"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/saveAndContinue"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="@string/saveAndContinue"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="15dp"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/scrollView"
        style="@android:style/Widget.Holo.ActionButton.TextButton"
        android:background="#00ffffff" />


</RelativeLayout>
