<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:weightSum="1"
    android:transitionGroup="false"
    android:background="@drawable/layout_style"
    >


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Название:"
        android:textSize="20dp"
        android:id="@+id/textView3"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/change"
        android:id="@+id/project_change"
        android:textSize="20dp"
        android:textColor="@color/accent_material_light"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="19dp"
        android:layout_below="@+id/project_completed"
        android:layout_toStartOf="@+id/project_delete"
        android:layout_marginBottom="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/delete"
        android:id="@+id/project_delete"
        android:textSize="20dp"
        android:textColor="@color/accent_material_light"
        android:layout_below="@+id/project_completed"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/project_name"
        android:layout_marginLeft="10dp"
        android:text="Имя проекта"
        android:textSize="15dp"
        android:layout_alignBaseline="@+id/textView3"
        android:layout_alignBottom="@+id/textView3"
        android:layout_toEndOf="@+id/textView5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Цель:"
        android:textSize="20dp"
        android:id="@+id/textView4"
        android:layout_alignBottom="@+id/project_objective"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/project_objective"
        android:text="Цель проекта"
        android:layout_below="@+id/project_name"
        android:layout_alignStart="@+id/project_name"
        android:textSize="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Результат:"
        android:id="@+id/textView5"
        android:layout_above="@+id/project_delete"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/project_completed"
        android:text="Результат"
        android:textSize="15dp"
        android:layout_below="@+id/project_objective"
        android:layout_alignStart="@+id/project_objective" />

</RelativeLayout>